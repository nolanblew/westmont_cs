<div style="text-align: center">
  <h1>Sections</h1>
  <i>Create, edit or delete sections here.</i><br/><br/>
  <%= link_to "Create New Section", new_section_path %> <br/><br/>

  <table class="view_table">
    <tr class="header_row_table">
      <td class="header_table">Name</td>
      <td class="header_table">Alias</td>
      <td class="header_table">Description</td>
      <td class="header_table">Home Page</td>
      <td class="header_table">Edit</td>
      <td class="header_table">Pages</td>
      <td class="header_table">Move</td>
      <td class="header_table">Delete</td>
    </tr>

    <% list = Section.find(:all, :order => "position") %>
    <% for i in 0..list.size-1 %>
        <tr class="row_table">
          <td class="tr_table"><%= list[i].name %></td>
          <td class="tr_table"><%= list[i].alias %></td>
          <td class="tr_table"><%= list[i].description %></td>
          <td class="tr_table"><%= list[i].home %></td>
          <td class="tr_table"><%= link_to "Edit", edit_section_path(list[i]) %></td>
          <td class="tr_table"><%= link_to "Edit Pages", "/administrator/" + list[i].id.to_s + "/pages" %></td>
          <td class="tr_table">
            <%= link_to image_tag("arrow_up.png"), "/administrator/" + list[i].id.to_s + "/move_up" if i > 0 %>
            <%= link_to image_tag("arrow_down.png"), "/administrator/" + list[i].id.to_s + "/move_down" if i < list.size-1 %>
          </td>
          <td class="tr_table"><%= link_to "Delete", section_path(list[i]), method: :delete, confirm: "Are you sure you want to delete this role? This cannot be undone." if list.size > 1 %></td>
        </tr>
    <% end %>

  </table>

</div>